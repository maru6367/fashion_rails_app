<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header text-center">
          <h2 class="mb-0">お問い合わせ</h2>
        </div>

        <div class="card-body">
          <p class="text-muted">
            ご質問・ご意見などがございましたら、下記フォームよりお気軽にお問い合わせください。
          </p>

          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <% if @contact.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: @contact, url: contact_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label :name, "お名前" %> <span class="text-danger">*</span>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :email, "メールアドレス" %> <span class="text-danger">*</span>
              <%= f.email_field :email,
                    class: "form-control",
                    required: true,
                    placeholder: "example@example.com" %>
            </div>

            <div class="form-group">
              <%= f.label :subject, "表題（件名）" %>
              <%= f.text_field :subject, class: "form-control", placeholder: "お問い合わせの件名" %>
            </div>

            <div class="form-group">
              <%= f.label :message, "お問い合わせ内容" %>
              <%= f.text_area :message, class: "form-control", rows: 6, placeholder: "お問い合わせ内容をご記入ください" %>
            </div>

            <div class="d-flex justify-content-end mt-4">
              <%= f.submit "送信する", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>