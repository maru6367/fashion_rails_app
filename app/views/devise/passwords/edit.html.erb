<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center">
          <h2 class="mb-0">パスワードの再設定</h2>
        </div>

        <div class="card-body">
          <p class="text-muted">
            新しいパスワードを入力してください。
          </p>

          <%= form_for(resource,
                       as: resource_name,
                       url: password_path(resource_name),
                       html: { method: :put }) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- これは必須：トークンを保持するため -->
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "新しいパスワード" %>
              <% if @minimum_password_length %>
                <small class="text-muted d-block mb-1">
                  （<%= @minimum_password_length %>文字以上で入力してください）
                </small>
              <% end %>
              <%= f.password_field :password,
                    autocomplete: "new-password",
                    class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "新しいパスワード（確認用）" %>
              <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    class: "form-control" %>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
              <%= link_to "ログイン画面へ戻る", new_user_session_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>