<div class="row justify-content-center">
  <div class="col-lg-8 col-md-10">

    <!-- プロフィール編集カード -->
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-dark text-white">
        <h4 class="mb-0">マイページ</h4>
        <small class="text-light">会員情報の編集</small>
      </div>

      <div class="card-body">
        <%= render "users/shared/error_messages", resource: resource %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <!-- メールアドレス -->
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info py-2">
              確認待ちのメールアドレス：<strong><%= resource.unconfirmed_email %></strong>
            </div>
          <% end %>

          <!-- 新しいパスワード -->
          <div class="form-group">
            <%= f.label :password, "新しいパスワード（変更しない場合は空欄のまま）" %>
            <%= f.password_field :password,
                                 autocomplete: "new-password",
                                 class: "form-control" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">
                最低 <%= @minimum_password_length %> 文字
              </small>
            <% end %>
          </div>

          <!-- 新しいパスワード（確認用） -->
          <div class="form-group">
            <%= f.label :password_confirmation, "新しいパスワード（確認用）" %>
            <%= f.password_field :password_confirmation,
                                 autocomplete: "new-password",
                                 class: "form-control" %>
          </div>

          <!-- 現在のパスワード -->
          <div class="form-group">
            <%= f.label :current_password, "現在のパスワード（確認のため必須）" %>
            <%= f.password_field :current_password,
                                 autocomplete: "current-password",
                                 class: "form-control" %>
          </div>

          <div class="d-flex justify-content-between align-items-center mt-4">
            <%= link_to "トップに戻る", root_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "変更を保存する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- アカウント削除カード -->
    <div class="card border-danger">
      <div class="card-header bg-light">
        <strong class="text-danger">アカウント削除</strong>
      </div>
      <div class="card-body">
        <p class="mb-3">
          このアカウントを完全に削除します。<br>
          登録情報は復元できません。本当に削除してよろしければ、下のボタンを押してください。
        </p>

        <%= button_to "アカウントを削除する",
                      registration_path(resource_name),
                      data: { confirm: "本当に削除してもよろしいですか？この操作は取り消せません。",
                              turbo_confirm: "本当に削除してもよろしいですか？この操作は取り消せません。" },
                      method: :delete,
                      class: "btn btn-danger" %>
      </div>
    </div>

  </div>
</div>